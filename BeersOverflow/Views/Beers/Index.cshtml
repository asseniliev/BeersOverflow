@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 
@model IEnumerable<AspNetCoreDemo.Models.Beer>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>BeerOverflow - Beers</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div>
            <h3>
                @*I leave these lines commented in the code, to have comparison between
                    pure html and asp tag helpers approach:*@

                @*<a href="/Home/Index" class="nav">Home</a>
                <a href="/Beers/Index" class="nav">Beers</a>
                <a href="/Home/About" class="nav">About</a>
                <a href="/api/swagger" class="nav">Developer API</a>*@

                <a asp-controller="Home" asp-action="Index" class="nav">Home</a>
                <a asp-controller="Beers" asp-action="Index" class="nav">Beers</a>
                <a asp-controller="Home" asp-action="About" class="nav">About</a>
                <a asp-controller="api" asp-action="swagger" class="nav">Developer API</a>
            </h3>
        </div>
    </header>

    <div class="body-content">
        <h2>Beers</h2>

        <div class="table">
            <div class="header">
                <div class="header-cell">Name</div>
                <div class="header-cell">% ABV</div>
                <div class="header-cell">Style</div>
                <div class="header-cell">Actions</div>
            </div>

            @{
                foreach (var beer in this.Model)
                {
                    <div class="row">
                        <div class="cell">@beer.Name</div>
                        <div class="cell">@beer.Abv</div>
                        <div class="cell">@beer.Style.Name</div>
                        <div class="cell">
                            <a asp-controller="Beers" asp-action="Details" asp-route-id="@beer.Id" >Details</a>
                            @*<a href="@($"/Beers/Details/{beer.Id}")" class="nav">Details</a>*@
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <footer>
        <small>© Copyright @DateTime.Now.Year, BeerOverflow</small>
    </footer>
</body>
</html>